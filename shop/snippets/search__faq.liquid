<style>
{% if Settings.image != blank %}
  #section-{{ id }} .search_faq--image {
    background:url('{{ Settings.image | img_url: "1024x1024" }}');
  }
{% endif %}
</style>


<section class="{% if Settings.section_bg %}{{ Settings.section_bg }} {% endif %}{% if Settings.section_spacing %}{{ Settings.section_spacing }} {% endif %} {{ Settings.section_spacing_mobile }} section" id="section-{{ id }}" data-section-id="{{ id }}" data-section-type="template-section">
	<div class="{% if Settings.section_spacing %}{{ Settings.section_spacing }} {% endif %} {{ Settings.section_spacing_mobile }}"></div>

	<div class="search_faq--image"></div>

	<div class="search_faq mobile-container--large">
		<p class="text t-2">{{ Settings.text }}</p>
		<div class="search_faq--input input-arrow input-arrow--search">
			<input data-search-box type="text" class="input-arrow__field input-arrow__field--search text t-8" placeholder="{{ Settings.placeholder }}" aria-required="true" aria-label="Rechercher">
			<span class="input-arrow__btn">
			  <button data-search-launch="" class="btn input-arrow__submit" name="commit" id="Search">
				  <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-search" viewBox="0 0 16.987 17.508"><defs><mask id="a" maskUnits="userSpaceOnUse"><path d="M0 0h16.987v17.508H0z"></path><use fill="#fff" xlink:href="#rect-1"></use></mask></defs><g><ellipse fill="none" cx="6.956" cy="7.228" rx="5.38" ry="5.59"></ellipse><path fill="#0A3129" fill-rule="evenodd" d="M12.805 11.227l3.797 3.946a1.411 1.411 0 0 1 0 1.935 1.286 1.286 0 0 1-1.863 0l-3.797-3.945-.009-.01a6.74 6.74 0 0 1-3.977 1.303C3.121 14.456 0 11.213 0 7.228 0 3.242 3.12 0 6.956 0c3.836 0 6.957 3.242 6.957 7.228a7.385 7.385 0 0 1-1.144 3.965l.036.034zm-5.849-9.59c-2.966 0-5.38 2.508-5.38 5.59s2.414 5.591 5.38 5.591c2.967 0 5.38-2.508 5.38-5.59s-2.413-5.59-5.38-5.59z"></path></g></svg>
				</button>
		  </span>
	  </div>
    <p class="search_faq-noResult" data-no-result-search >{{ Settings.message_no_result }}</p>
	</div>

</section>
