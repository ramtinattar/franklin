<div data-account-popup style="display:none;">
  <div class="background-overlay quickview">
    <div data-account-state class="account-popup relative">
		<div data-account-loader class="cart__loader-container">
		  <div class="lds-dual-ring"></div>
		</div>
      <div data-close-account class="account-popup__close pointer">{% include 'icon-croix' %}</div>
      <div data-account-container class="account-popup__container">

      </div>
    </div>
  </div>
</div>

<template data-email-template>
  <div class="account-popup__container">
    <img class="account-popup__image" src="{{ section.settings.email_image | img_url : 'master' }}" />
    <div class="account-popup__title z-h4 heading">
      {{ section.settings.email_title }}
    </div>
    <div class="account-popup__subtitle text t-4">
      {{ section.settings.email_subtitle }}
    </div>
	<div class="account-popup__error" data-account-error></div>
    <div class="account-popup__inputs-container ">
      <input data-email-input type="email" class="input-text" placeholder="{{ section.settings.email_placeholder }}"/>
    </div>
    <div class="account-popup__button">
      <button data-email-button disabled class="button button--full button--secondary button--disabled">{{ section.settings.email_button_text }}</button>
    </div>
  </div>
</template>

<template data-register-template>
  <div class="account-popup__container">
	  <img class="account-popup__image" src="{{ section.settings.register_image | img_url : 'master' }}" />
	  <div class="account-popup__title z-h4 heading">
	    {{ section.settings.register_title }}
	  </div>
	  <div class="account-popup__subtitle text t-4">
	    {{ section.settings.register_subtitle }}
	  </div>
	  <div class="account-popup__error" data-account-error></div>
	  <form data-register-form class="account-popup__inputs-container ">
	    <input data-register-mail name="email" type="email" class="input-text" placeholder="{{ section.settings.register_mail_placeholder }}"/>
		<input name="first_name" type="text" class="input-text" placeholder="{{ section.settings.register_first_name_placeholder }}"/>
		<input name="last_name" type="text" class="input-text" placeholder="{{ section.settings.register_last_name_placeholder }}"/>
		<input data-register-password name="password" type="password" class="input-text" placeholder="{{ section.settings.register_password_placeholder }}"/>
		<input data-register-confirmation name="confirm_password" type="password" class="input-text" placeholder="{{ section.settings.register_confirm_placeholder }}"/>

	</form>
	  <div class="account-popup__button">
	    <button data-register-button disabled class="button button--full button--secondary button--disabled">{{ section.settings.register_button_text }}</button>
	  </div>
	  <div class="account-popup__checkbox-container">
		  <input data-register-newscheck class="account-popup__checkbox" type="checkbox" name="accepts_marketing" />
		  <div data-register-newstext class="text t-5 uppercase pointer">
			  {{ section.settings.register_newsletter_text }}
		  </div>
	  </div>
	  <div class="account-popup__mandatory-container align-right">
		  <div class="text t-6 italic">
			{{ section.settings.mandatory_text }}
		  </div>
	  </div>
  </div>
</template>

<template data-signin-template>
  <div class="account-popup__container">
	  <img class="account-popup__image" src="{{ section.settings.signin_image | img_url : 'master' }}" />
	  <div class="account-popup__title z-h4 heading">
	    {{ section.settings.signin_title }}
	  </div>
	  <div class="account-popup__subtitle text t-4">
	    {{ section.settings.signin_subtitle }}
	  </div>
	  <div class="account-popup__error" data-account-error></div>
	  <form data-signin-form class="account-popup__inputs-container">
	    <input data-signin-mail name="email" type="email" class="input-text" placeholder="{{ section.settings.signin_mail_placeholder }}"/>
		<input data-signin-password name="password" type="password" class="input-text" placeholder="{{ section.settings.signin_password_placeholder }}"/>
	</form>
	  <div class="account-popup__button">
		<button data-signin-button disabled class="button button--full button--secondary button--disabled">{{ section.settings.signin_button_text }}</button>
	  </div>
	  <div class="account-popup__mandatory-container align-left">
		  <div data-signin-forgot class="text t-6 underline pointer">
			{{ section.settings.signin_forgot }}
		  </div>
	  </div>
  </div>
</template>

<template data-forgot-template>
  <div class="account-popup__container">
	  <img class="account-popup__image" src="{{ section.settings.forgot_image | img_url : 'master' }}" />
	  <div class="account-popup__title z-h4 heading">
	    {{ section.settings.forgot_title }}
	  </div>
	  <div class="account-popup__error" data-account-error></div>
	  <div class="account-popup__final-message text t-4">
		  {{ section.settings.forgot_final }}
	  </div>
	  <div class="account-popup__initial-message">
		  <div class="account-popup__subtitle text t-4">
		  {{ section.settings.forgot_subtitle }}
		</div>
		  <form data-forgot-form class="account-popup__inputs-container ">
		    <input data-forgot-mail name="email" type="email" class="input-text" placeholder="{{ section.settings.forgot_mail_placeholder }}"/>
		</form>
		  <div class="account-popup__button">
			<button data-forgot-button class="button button--full button--secondary">{{ section.settings.forgot_button_text }}</button>
		  </div>
	  </div>

  </div>
</template>


<template data-activate-template>
  <div class="account-popup__container">
