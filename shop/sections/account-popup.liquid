	    {{ section.settings.activate_title }}
	  </div>
	  <div class="account-popup__subtitle text t-4">
	    {{ section.settings.activate_subtitle }}
	  </div>
	  <div class="account-popup__error" data-account-error></div>

	  <div class="account-popup__final-message">
		 {{ section.settings.activate_final }}
	 </div>
	 <div class="account-popup__initial-message">
		 <form data-activate-form class="account-popup__inputs-container ">
		   <input data-activate-mail name="email" type="email" class="input-text" placeholder="{{ section.settings.activate_mail_placeholder }}"/>
		 </form>
		 <div class="account-popup__button">
		   <button data-activate-button  class="button button--full button--secondary">{{ section.settings.activate_button_text }}</button>
		 </div>
	 </div>
  </div>
</template>

<template data-pending-template>
	<div class="account-popup__container">
   	 <img class="account-popup__image" src="{{ section.settings.signin_image | img_url : 'master' }}" />
   	 <div class="account-popup__title z-h4 heading">
   	   {{ section.settings.signin_title }}
   	 </div>
   	 <div class="account-popup__subtitle text t-4">
   	   {{ section.settings.pending_text }}
   	 </div>
    </div>
</template>


